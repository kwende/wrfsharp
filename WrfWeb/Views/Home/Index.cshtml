@{
    ViewData["Title"] = "Home Page";
}
@model WrfWeb.Models.IndexModel

<div style="text-align:center;font-size:x-large">GFS data start date: <b>@Model.SimulationStartDate.ToString()</b></div>
<div style="text-align:center;font-size:small">mouse over lines for dates</b></div>

<div id="curve_chart" style="width: 100%;"></div>

<div id="temp_chart" style="width: 100%;"></div>

<script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {

        var data = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(Model.PrecipSummary)));

        var options = {
            title: 'Average expected precip over Lancaster County, NE (in mm)',
          curveType: 'function',
          legend: { position: 'bottom' }
        };

        var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

        chart.draw(data, options);

         var tempData = google.visualization.arrayToDataTable(@Html.Raw(Json.Serialize(Model.TempSummary)));

          var tempDataOptions = {
              title: 'Average expected temperature over Lancaster County, NE (in F)',
              curveType: 'function',
              legend: { position: 'bottom' }
          };

          var tempChart = new google.visualization.LineChart(document.getElementById('temp_chart'));

          tempChart.draw(tempData, tempDataOptions);
      }
</script>